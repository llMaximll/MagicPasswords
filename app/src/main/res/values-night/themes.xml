<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MagicPasswords" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#202020</item>
        <item name="colorPrimaryVariant">#202020</item>
        <item name="colorOnPrimary">#202020</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- FAB -->
        <item name="floatingActionButtonStyle">@style/Widget.MaterialComponents.FloatingActionButton.FAB</item>
        <!-- Switch -->
        <item name="switchStyle">@style/Widget.MaterialComponents.CompoundButton.Switch.MySwitch</item>
    </style>
</resources>