<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:id="@+id/change_theme_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выбор темы"
                android:padding="10dp"
                android:gravity="start|center"
                android:textColor="@color/text"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/fingerprint_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:id="@+id/fingerprint_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:padding="10dp"
                    android:gravity="start|center"
                    android:text="Отпечаток пальца"
                    android:textColor="@color/text"
                    android:textAllCaps="false"
                    android:textSize="18sp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/fingerprint_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:id="@+id/reset_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="start|center"
                android:text="Сброс пароля"
                android:textColor="@color/text"
                android:textAllCaps="false"
                android:textSize="18sp"/>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>